<main role="main" class="inner cover">
  <div class="app-card-container">
    <div class="card">
      <h1 class="cover-heading">About Me</h1>
      
      <div class="row">
        <div class="col-md-5">
          <%= image_tag "avatar.jpg", width: 250, alt: "Profile Image" , class: 'profile-img'%>
          <div class="skills">
            <% @skills.each do |skill|%>
              <div class="skill">
                <h4><%= skill.title %></h4>
                <div class="progress">
                  <div 
                    class="progress-bar progress-bar-striped bg-warning"
                    role = "progressbar"
                    aria-valuenow="<%= skill.percent_utilized%>"
                    aria-valuemax ="100"
                    style="width: <%= skill.percent_utilized%>%"
                    >
                  </div>
                </div> 
              </div> 
            <% end %>
          </div>
        </div>
        <div class="col-md-7">
           <p class="lead">Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.</p>
            <p>
              <button
                class='btn btn-primary'
                type='button'
                data-toggle='collapse'
                data-target='#jobHistory'
                aria-expanded='false'
                aria-controler='jobHistory'
              >
              Job History
              </button>
              <button
                class='btn btn-primary'
                type='button'
                data-toggle='collapse'
                data-target='#education'
                aria-expanded='false'
                aria-controler='education'
              >
              Education
              </button>
            </p>
            <p>
              <div class="collapse" id="jobHistory">
                <div class="card card-body">
                  Jobs is good!!
                </div>
                <div class="card card-body">
                  Jobs is good!!
                </div>
              </div>
              <div class="collapse" id="education">
                <div class="card card-body">
                  Jobs is good!!
                </div>
                <div class="card card-body">
                  Jobs is good!!
                </div>
              </div>
            </p>

        </div>
      </div>
    </div>
  </div>
  

 
  
</main>